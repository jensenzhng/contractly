{
    "manifest_version": 3,
    "name": "Contractly",
    "version": "1.0",
    "description": "Summarizes privacy policies automatically.",
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["https://*/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [{
      "matches": ["https://*/*"],
      "js": ["content.js"]
    }]
  }