{
    "manifest_version": 3,
    "name": "Contractly",
    "version": "1.0",
    "description": "Summarizes privacy policies automatically.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }